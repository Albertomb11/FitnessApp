{% extends "layout.twig" %}

{% block css %}
    <link rel="stylesheet" href="{{ '' | url }}css/bootstrap-tokenfield.min.css">
{% endblock %}

{% block content %}
<div class="container">

    <h1>{{ webInfo.h1 }}</h1>

    <form method="post">

        <div class="form-group{% if errors['nombre'] %}has-error{% endif %}">
        <label for="inputNombre">Nombre</label>
        <input type="text" class="form-control" id="inputNombre" name="nombre" placeholder="Nombre" value="{{ fitness.nombre }}">
</div>
{{ generateAlert(errors, 'nombre') }}

<div class="form-group{% if errors['posicion'] %}has-error{% endif %}">
<label for="inputPosicion">Posicion</label>
    <input type="text" class="form-control" id="inputPosicion" name="posicion" placeholder="Posicion" value="{{ fitness.posicion }}">
</div>
{{ generateAlert(errors, 'posicion') }}

<div class="form-group{% if errors['ejecucion'] %}has-error{% endif %}">
<label for="inputEjecucion">Ejecucion</label>
    <input type="text" class="form-control" id="inputEjecucion" name="ejecucion" placeholder="Ejecucion" value="{{ fitness.ejecucion }}">
</div>
{{ generateAlert(errors, 'ejecucion') }}

<div class="form-group">
    <label for="inputImage">Imagen (Solo imagenes que empiecen por https://)</label>
    <input type="text" class="form-control" id="inputImagen" name="imagen" placeholder="URL de la imagen" value="{{ fitness.imagen }}">
</div>
{{ generateAlert(errors, 'imagen') }}

<div class="form-group{% if errors['categoria'] %}has-error{% endif %}">
<label for="inputCategoria">Categoria</label>
{{ generateSelect(["Pectoral", "Espalda", "Hombros", "Piernas", "Brazos"], fitness['categoria'], 'categoria') }}
</div>
{{ generateAlert(errors, 'categoria') }}

        <input type="hidden" name="_method" value="{{ webInfo.method }}">
        <button type="submit" class="btn btn-success">Enviar</button>
</form>

</div>
{% endblock %}
